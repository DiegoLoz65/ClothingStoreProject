<!DOCTYPE html>
<html lang="en">

@model IEnumerable<producto>
@{
    ViewData["Title"] = "Masculino";
}
<!-- MDB icon -->
  <link rel="icon" href="img/mdb-favicon.ico" type="image/x-icon">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.11.2/css/all.css">
  <!-- Google Fonts Roboto -->
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap">
  <!-- Bootstrap core CSS -->
  <link rel="stylesheet" href="css/bootstrap.min.css">
  <!-- Your custom styles (optional) -->
  <link rel="stylesheet" href="css/style.css">

<body>

<!-- BUSCAR -->
<form method="get" action="/page2" style="position: absolute; left: 1130px; top: 252px;">
 <button asp-action="Create" class="btn btn-dark">Crear</button>
</form>

<form method="post" class="form-inline md-form mr-auto mb-4" style="position: absolute; left: 1200px; top: 252px;">
  
  <input class="form-control mr-sm-2" type="text" placeholder="Buscar" aria-label="Buscar" name="pNombre" id="txtNombre">
  <button asp-action="Search" type="submit" class="btn btn-dark">Buscar</button>
</form>


   
    <!-- Section heading -->
    <h2 class="font-weight-bold display-4">Productos Masculinos <i class="fas fa-male" width="2.3em" height="2.3em"></i></h2>
    <div style="position: absolute; left: 15px; top: 260px;">
      <h4 class="font-weight-bold">Ordenar por:   </h4>
      <a asp-action="BubbleSortNombre"> <h5 class="font-weight-bold" style="color: #000000;">-Nombre  <i class="fab fa-adversal"> </i></h5> </i></a>
      <a asp-action="BubbleSortPrecio"> <h5 class="font-weight-bold" style="color: #000000;">-Precio  <i class="fas fa-search-dollar"></i></h5> </i> </a>
      <a asp-action="BubbleSortUnidades"> <h5 class="font-weight-bold" style="color: #000000;">-Unidades  <i class="fas fa-box"></i></h5> </i> </a>
    </div>
    
    

    <!-- Section description -->
<div class="container my-5">
  <!--Section: Content-->
  <section class="dark-grey-text text-center">
  	<!-- Grid row -->
    <div class="row">
@foreach (producto item in Model)
{
      <!-- Grid column -->
      <div class="col-lg-3 col-md-6 mb-4">
        <!-- Card -->
        <div class="card card-cascade narrower card-ecommerce">
          <!-- Card image -->
          <div class="view view-cascade overlay">
            <a asp-action="Details" asp-route-tmpNombre=@item.tmpnombre><img src=@item.tmpimagen class="card-img-top"
              alt="sample photo"></a>
            <a>
              <div class="mask rgba-white-slight"></div>
            </a>
          </div>
          <!-- Card image -->
          <!-- Card content -->
          <div class="card-body card-body-cascade text-center pb-3">
            <!-- Title -->
            <h5 class="card-title mb-1" >
              <strong>
                <a asp-action="Details" asp-route-tmpNombre=@item.tmpnombre style="color: #000000;">@item.tmpnombre</a>
              </strong>
            </h5>
            <!-- Description -->
            <p class="card-text mb-1 ">
              <strong>Color:</strong> @item.tmpcolor 
            </p>
            <p class="card-text mb-1">
              <strong>Talla:</strong> @item.tmptalla
            </p>
            <p class="card-text mb-1">
              <strong>Unidades:</strong> @item.tmpunidades
            </p>
            <p class="card-text">
              
              <a asp-action="Delete" asp-route-tmpNombre=@item.tmpnombre>Eliminar</a>
              <a asp-action="Edit" asp-route-tmpNombre=@item.tmpnombre>Editar</a>
            </p>
            <!-- Card footer -->
            <div class="card-footer px-1">
              <span class="float-left font-weight-bold">
                <strong>$@item.tmpprecio</strong>
              </span>
              <span class="float-right">
                <a class="material-tooltip-main" data-toggle="tooltip" data-placement="top" title="Add to Cart">
                  <i class="fas fa-shopping-cart grey-text ml-3"></i>
                </a>
                <a class="material-tooltip-main" data-toggle="tooltip" data-placement="top" title="Add to Wishlist">
                  <i class="fas fa-heart grey-text ml-3"></i>
                </a>
              </span>
            </div>
          </div>
          <!-- Card content -->
        </div>
        <!-- Card -->
      </div>
      <!-- Grid column -->
    }
    </div>
    <!-- Grid row -->
    </section>
  <!--Section: Content-->
</div>

</body>
</html>