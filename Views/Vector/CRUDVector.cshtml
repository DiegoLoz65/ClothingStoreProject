<!DOCTYPE html>
<html lang="en">

@model IEnumerable<producto2>
@{
    ViewData["Title"] = "Femenino";
}
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta http-equiv="x-ua-compatible" content="ie=edge">
  <title>Material Design Bootstrap</title>
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
  <!-- Bootstrap core CSS -->
  <link href="css/bootstrap.min.css" rel="stylesheet">
  <!-- Material Design Bootstrap -->
  <link href="css/mdb.min.css" rel="stylesheet">
  <!-- Your custom styles (optional) -->
  <link href="css/style.css" rel="stylesheet">
</head>

<body>

<!-- BUSCAR -->
<form method="get" action="/page2" style="position: absolute; left: 1130px; top: 252px;">
 <button asp-action="CreateVector" class="btn btn-dark">Crear</button>
</form>

<form method="post" class="form-inline md-form mr-auto mb-4" style="position: absolute; left: 1200px; top: 252px;">
  
  <input class="form-control mr-sm-2" type="text" placeholder="Buscar" aria-label="Buscar" name="pNombre" id="txtNombre">
  <button asp-action="SearchVector" type="submit" class="btn btn-dark">Buscar</button>
</form>


   
    <!-- Section heading -->
    <h2 class="font-weight-bold display-4">Productos Femeninos <i class="fas fa-female" width="2.3em" height="2.3em"></i> </h2>
    <!-- Section description -->
<div class="container my-5">
  <!--Section: Content-->
  <section class="dark-grey-text text-center">
  	<!-- Grid row -->
    <div class="row">
@foreach (producto2 item in Model)
{
    if(@item.tmpnombre != null){
<!-- Grid column -->
      <div class="col-lg-3 col-md-6 mb-4">
        <!-- Card -->
        <div class="card card-cascade narrower card-ecommerce">
          <!-- Card image -->
          <div class="view view-cascade overlay">
            <a asp-action="DetailsVector" asp-route-tmpNombre=@item.tmpnombre><img src=@item.tmpimagen class="card-img-top"
              alt="sample photo"></a>
            <a>
              <div class="mask rgba-white-slight"></div>
            </a>
          </div>
          <!-- Card image -->
          <!-- Card content -->
          <div class="card-body card-body-cascade text-center pb-3">
            <!-- Title -->
            <h5 class="card-title mb-1" >
              <strong>
                <a asp-action="DetailsVector" asp-route-tmpNombre=@item.tmpnombre style="color: #000000;">@item.tmpnombre</a>
              </strong>
            </h5>
            <!-- Description -->
            <p class="card-text mb-1 ">
              <strong>Color:</strong> @item.tmpcolor 
            </p>
            <p class="card-text mb-1">
              <strong>Talla:</strong> @item.tmptalla
            </p>
            <p class="card-text mb-1">
              <strong>Unidades:</strong> @item.tmpunidades
            </p>
            <p class="card-text">
              
              <a asp-action="DeleteVector" asp-route-tmpNombre=@item.tmpnombre>Eliminar</a>
              <a asp-action="EditVector" asp-route-tmpNombre=@item.tmpnombre>Editar</a>
            </p>
            <!-- Card footer -->
            <div class="card-footer px-1">
              <span class="float-left font-weight-bold">
                <strong>$@item.tmpprecio</strong>
              </span>
              <span class="float-right">
                <a class="material-tooltip-main" data-toggle="tooltip" data-placement="top" title="Add to Cart">
                  <i class="fas fa-shopping-cart grey-text ml-3"></i>
                </a>
                <a class="material-tooltip-main" data-toggle="tooltip" data-placement="top" title="Add to Wishlist">
                  <i class="fas fa-heart grey-text ml-3"></i>
                </a>
              </span>
            </div>
          </div>
          <!-- Card content -->
        </div>
        <!-- Card -->
      </div>
      <!-- Grid column -->
    }
      
}
    </div>
    <!-- Grid row -->
    </section>
  <!--Section: Content-->
</div>

<!-- SCRIPTS -->
  <!-- JQuery -->
  <script type="text/javascript" src="js/jquery-3.4.1.min.js"></script>
  <!-- Bootstrap tooltips -->
  <script type="text/javascript" src="js/popper.min.js"></script>
  <!-- Bootstrap core JavaScript -->
  <script type="text/javascript" src="js/bootstrap.min.js"></script>
  <!-- MDB core JavaScript -->
  <script type="text/javascript" src="js/mdb.min.js"></script>
</body>
</html>
